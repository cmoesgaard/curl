.TH CARLOPT_APPEND 3 "17 Jun 2014" "libcarl 7.37.0" "carl_easy_setopt options"
.SH NAME
CARLOPT_APPEND \- enable appending to the remote file
.SH SYNOPSIS
#include <carl/carl.h>

CARLcode carl_easy_setopt(CARL *handle, CARLOPT_APPEND, long append);
.SH DESCRIPTION
A long parameter set to 1 tells the library to append to the remote file
instead of overwrite it. This is only useful when uploading to an FTP site.
.SH DEFAULT
0 (disabled)
.SH PROTOCOLS
FTP
.SH EXAMPLE
.nf
CARL *carl = carl_easy_init();
if(carl) {

  carl_easy_setopt(carl, CARLOPT_URL, "ftp://example.com/dir/to/newfile");
  carl_easy_setopt(carl, CARLOPT_UPLOAD, 1L);
  carl_easy_setopt(carl, CARLOPT_APPEND, 1L);

  carl_easy_perform(carl);
}
.fi
.SH AVAILABILITY
This option was known as CARLOPT_FTPAPPEND up to 7.16.4
.SH RETURN VALUE
Returns CARLE_OK if the option is supported, and CARLE_UNKNOWN_OPTION if not.
.SH "SEE ALSO"
.BR CARLOPT_DIRLISTONLY "(3), " CARLOPT_RESUME_FROM "(3), "
.BR CARLOPT_UPLOAD "(3), "
