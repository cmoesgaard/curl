--libcarl for IMAP FETCH message
 </name>
<setenv>
SSL_CERT_FILE=
</setenv>
<command>
'imap://%HOSTIP:%IMAPPORT/1420/;MAILINDEX=1' -u user:secret --libcarl log/test1420.c
</command>
</client>

